
{
  "name": "NightBloom By Rutvi Shah",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#F0D8FF",
    "editorCursor.foreground": "#F8E8FF",
    "editorLineNumber.foreground": "#C8A0E8",
    "editorLineNumber.activeForeground": "#F5E0FF",
    "editor.selectionBackground": "#5C018580",
    "editor.inactiveSelectionBackground": "#3F005B40",
    "editorIndentGuide.background": "#2e2e2e",
    "editorIndentGuide.activeBackground": "#3e3e3e",

    "activityBar.background": "#000000",
    "activityBar.foreground": "#E0C0FF",
    "activityBar.inactiveForeground": "#A080C0",
    "activityBarBadge.background": "#C8A0E8",

    "sideBar.background": "#000000",
    "sideBar.foreground": "#E0C0FF",
    "sideBarTitle.foreground": "#C8A0E8",
    "sideBarSectionHeader.background": "#000000",
    "sideBarSectionHeader.foreground": "#D0B0F0",

    "statusBar.background": "#000000",
    "statusBar.foreground": "#F0D8FF",

    "titleBar.activeBackground": "#000000",
    "titleBar.inactiveBackground": "#000000",
    "titleBar.activeForeground": "#D0B0F0",
    "titleBar.inactiveForeground": "#B090D0",

    "window.activeTitleBar.background": "#000000",
    "window.inactiveTitleBar.background": "#000000",

    "editorGroupHeader.tabsBackground": "#000000",
    "tab.activeBackground": "#000000",
    "tab.inactiveBackground": "#0a0a0a",
    "tab.border": "#000000",
    "tab.activeForeground": "#E0C0FF",
    "tab.inactiveForeground": "#A080C0",

    "panel.background": "#000000",
    "panel.border": "#1a1a1a"
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#A99AB8" // dusty lilac for comments
      }
    },
    {
      "scope": ["string", "constant.other.placeholder"],
      "settings": {
        "foreground": "#FFD1DC" // blush pink for strings
      }
    },
    {
      "scope": ["variable", "identifier"],
      "settings": {
        "foreground": "#A0A0FF" // periwinkle for variables
      }
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#D6ACFF", // light lavender for keywords
        "fontStyle": "bold"
      }
    },
    {
      "scope": ["entity.name.function", "support.function", "meta.function-call"],
      "settings": {
        "foreground": "#EFB0FF" // light pink-lavender for functions
      }
    },
    {
      "scope": ["constant.numeric", "constant.language", "constant.character"],
      "settings": {
        "foreground": "#E9D5FF" // soft orchid purple for numbers
      }
    },
    {
      "scope": ["entity.name.tag", "meta.tag.sgml"],
      "settings": {
        "foreground": "#B388EB" // muted violet for tags
      }
    },
    {
      "scope": ["markup.bold"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#E9D5FF" // soft orchid for bold markup
      }
    },
    {
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#E9D5FF" // soft orchid for italic markup
      }
    },
    {
      "scope": ["markup.underline"],
      "settings": {
        "fontStyle": "underline",
        "foreground": "#E9D5FF" // soft orchid for underline
      }
    },
    {
      "scope": ["punctuation"],
      "settings": {
        "foreground": "#C8A0E8" // keep punctuation soft
      }
    },
    {
      "scope": ["markup.quote"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#B388EB" // muted violet for quotes
      }
    },
    {
      "scope": ["markup.inserted"],
      "settings": {
        "foreground": "#D6ACFF" // lavender for inserted markup
      }
    },
    {
      "scope": ["markup.deleted"],
      "settings": {
        "foreground": "#FFD1DC" // blush pink for deleted markup
      }
    }
  ]
}
